<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_view_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_background"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_view_header_name"
            style="@style/ListViewHeader"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            tools:text="HEADER" />

        <View
            android:id="@+id/list_view_header_line"
            style="@style/ListViewHeaderLine"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/listview_header_sidebar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/list_item_edge"
        android:gravity="right|top|bottom"
        android:visibility="gone" />
</LinearLayout>