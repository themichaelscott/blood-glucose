<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/list_item_full_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_row"
    android:orientation="horizontal"
    >

    <!-- include the list item for a non-dual layout -->
    <include layout="@layout/list_item"/>

    <RelativeLayout
        android:id="@+id/listview_sidebar_bg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/listview_sidebar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|top|bottom"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/listview_sidebar_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/list_item_edge_selected"
            android:gravity="right|center_vertical"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>